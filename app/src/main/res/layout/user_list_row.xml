<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
              xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="16dp">
    <ImageView
            android:id="@+id/img_user"
            android:layout_width="120dp" android:layout_height="120dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView android:id="@+id/txt_name" android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:text="User Name"/>
        <TextView android:id="@+id/txt_email" android:layout_width="match_parent" android:layout_height="wrap_content"
                  tools:text="Email address"/>
    </LinearLayout>

</LinearLayout>